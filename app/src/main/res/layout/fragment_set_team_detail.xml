<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/light_orange"
    tools:context=".fragment.SetTeamDetailFragment">


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/set_team_listView"
        android:layout_centerHorizontal="true"
        android:choiceMode="none"
        android:layout_alignParentTop="true"
        android:descendantFocusability="beforeDescendants"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="109dp"
        android:text="@string/submit"
        android:background="@drawable/ic_inbox_white_24dp"
        android:id="@+id/set_team_button1"
        android:layout_gravity="left|center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/set_team_listView"
        android:focusable="false"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="109dp"
        android:id="@+id/set_team_button2"
        android:background="@drawable/ic_add_box_white_24dp"
        android:layout_gravity="left|center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/set_team_listView" />

</RelativeLayout>
